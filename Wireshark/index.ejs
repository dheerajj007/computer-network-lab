function addTier() {
const tiersContainer = document.getElementById("tiersContainer");
const tier = document.createElement("div");
tier.className = "tier";
tier.innerHTML = `
<hr>
<div class="form-group">
  <label for="tierName">Tier Name:</label>
  <input type="text" class="form-control" name="tierName[]" required>
</div>
<div class="form-group">
  <label for="minBalance">Minimum Balance:</label>
  <input type="number" class="form-control" name="minBalance[]" required>
</div>
<div class="form-group">
  <label for="maxBalance">Maximum Balance:</label>
  <input type="number" class="form-control" name="maxBalance[]" required>
</div>
<div class="form-group">
  <label for="interestRate">Interest Rate:</label>
  <input type="number" class="form-control" name="interestRate[]" required>
</div>
<button type="button" class="btn btn-danger" onclick="removeTier(this)">Remove Tier</button>
`;
tiersContainer.appendChild(tier);
}

function removeTier(button) {
const tier = button.closest(".tier");
tier.parentNode.removeChild(tier);
}
